            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dancing_script_semi_bold"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
